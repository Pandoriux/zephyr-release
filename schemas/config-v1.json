        }
      ],
      "default": "base",
      "description": "Files to include in the commit. Accepts `base`, `all` options or an array of option and paths/globs.\nPaths are relative to the repo root.\nDefault: `base`",
      "examples": [
        []
      ]
    },
    "commit-types": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "minLength": 1,
            "description": "Commit type."
          },
          "section": {
            "type": "string",
            "default": "",
            "description": "Changelog section heading for this commit type."
          },
          "changelog-hidden": {
            "type": "boolean",
            "default": false,
            "description": "Exclude this commit type from changelog generation."
          }
        },
        "required": [
          "type"
        ]
      },
      "default": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "perf",
          "section": "Performance Improvements"
        },
        {
          "type": "revert",
          "section": "Reverts"
        }
      ],
      "description": "List of commit types used for version calculation and changelog generation.\nDefault: `[! (breaking), feat, fix, perf, revert]`."
    },
    "bump-strategy": {
      "type": "object",
      "properties": {
        "major": {
          "type": "object",
          "properties": {
            "types": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Commit types that count toward version bumping."
            },
            "count-breaking-as-commit": {
              "type": "boolean",
              "default": false,
              "description": "Count a breaking change as one commit regardless of current chosen `types`, provided that the commit type exists in base commit types list.\nDefault: `false`"
            },
            "count-breaking-as-bump": {
              "type": "boolean",
              "default": false,
              "description": "Count a breaking change as one bump directly regardless of current chosen `types`, provided that the commit type exists in base commit types list.\nDefault: `false`"
            },
            "commits-per-bump": {
              "anyOf": [
                {
                  "type": "integer",
                  "minimum": 0
                },
                {
                  "const": null
                },
                {
                  "const": "Infinity"
                }
              ],
              "default": 1,
              "description": "Number of commits required for additional version bump after the first. Use Infinity to always bump once, even if breaking changes are counted as bumps.\nDefault: `1`."
            }
          },
          "required": [],
          "default": {
            "types": [],
            "countBreakingAsBump": true,
            "commitsPerBump": 1
          },
