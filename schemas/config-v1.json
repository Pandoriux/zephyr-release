    "initial-version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "default": "0.1.0",
      "description": "Initial SemVer version applied when no existing version is found.\nDefault: `0.1.0`"
    },
    "version-files": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "path": {
              "type": "string",
              "minLength": 1,
              "description": "Path to the version file, relative to the project root."
            },
            "resolver": {
              "enum": [
                "auto",
                "json",
                "yaml",
                "toml",
                "regex"
              ],
              "default": "auto",
              "description": "Defines how to resolve the version from this file.\nDefault: `auto`"
            },
            "selector": {
              "type": "string",
              "minLength": 1,
              "description": "Json path to locates the version field. For regex resolver, supply a regex string."
            },
            "primary": {
              "type": "boolean",
              "default": false,
              "description": "Marks this file as the primary source of truth for the current version."
            }
          },
          "required": [
            "path",
            "selector"
          ]
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "minLength": 1,
                "description": "Path to the version file, relative to the project root."
              },
              "resolver": {
                "enum": [
                  "auto",
                  "json",
                  "yaml",
                  "toml",
                  "regex"
                ],
                "default": "auto",
                "description": "Defines how to resolve the version from this file.\nDefault: `auto`"
              },
              "selector": {
                "type": "string",
                "minLength": 1,
                "description": "Json path to locates the version field. For regex resolver, supply a regex string."
              },
              "primary": {
                "type": "boolean",
                "default": false,
                "description": "Marks this file as the primary source of truth for the current version."
              }
            },
            "required": [
              "path",
              "selector"
            ]
          }
        }
      ],
      "description": "Version file(s). Accepts a single file object or an array of file objects. If a single object, it becomes the primary file. If arrays, the first file with `primary: true` becomes the primary; if none are marked, the first file in the array will be.\nAbout primary file: link-to-inert-later"
    },
    "files-to-commit": {
      "anyOf": [
        {
          "enum": [
            "base",
            "all"
          ]
        },
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "enum": [
                  "base",
                  "all"
                ]
