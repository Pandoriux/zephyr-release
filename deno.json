{
  "name": "zephyr-release",
  "version": "0.1.0",
  "description": "Zephyr Release is yet another automated tool for version bumping, changelog generation, and release publishing.",
  "license": "Apache-2.0",

  "exports": "./README.md",

  "tasks": {
    "gen:json-schema": "deno run --allow-write scripts/gen-json-schema.ts",
    "gen:version": "deno run --allow-write scripts/gen-version.ts",
    "prebuild": "deno run --allow-run --allow-write scripts/prebuild.ts",
    "build": {
      "command": "tsdown",
      "dependencies": ["gen:json-schema", "gen:version", "prebuild"]
    }
  },

  "nodeModulesDir": "auto",
  "imports": {
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/text": "jsr:@std/text@^1.0.16",

    "@actions/core": "npm:@actions/core@^1.11.1",
    "@types/json-schema": "npm:@types/json-schema@^7.0.15",
    "@valibot/valibot": "jsr:@valibot/valibot@^1.1.0",
    "@valibot/to-json-schema": "jsr:@valibot/to-json-schema@^1.3.0",
    "@json-schema-tools/traverse": "npm:@json-schema-tools/traverse@^1.11.0",
    "tsdown": "npm:tsdown@^0.15.6"
  },

  "exclude": [
    "dist"
  ],

  "compilerOptions": {
    "lib": ["deno.ns"]
  },

  "lint": {
    "include": ["src/"]
  },

  "fmt": {
    "include": ["src/"]
  }
}
